mixin fact(title, number, icon, color)
    li(style="background-color:" + color).facts__item
      i(class= icon)
      span.facts__number= number
      span.facts__title= title
      p.facts__descr Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusa.
      
